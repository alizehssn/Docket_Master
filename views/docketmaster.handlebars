<main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-md-4">

    <section id="dashboard-header">
        <div
            class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
            <h1 class="h2">Docket Dashboard</h1>
        </div>
    </section>

    <section id="dashboard-search-filter">
        <div class="container-fluid border pt-1">
            <form class="form" action="/search/casenumber">
                <label for="search-by-case-number">
                    <h6>Search By Case Number</h6>
                </label>
                <div class="row">
                    <div class="col">
                        <input type="text" class="form-control" id="search-case-number" aria-label="Search"
                            name="caseNumber">
                        <small class="form-text text-muted">Case Number</small>
                    </div>
                    <div class="col pt-1">
                        <input class="btn-primary" type="submit" value="Search">
                    </div>
                </div>
            </form>
        </div>
        <br>
        <div class="container-fluid border pt-1">
            <form class="form" action="/search/plaintiff">
                <label for="search-by-plaintiff">
                    <h6>Search By Plaintiff</h6>
                </label>
                <div class="row">
                    <div class="col">
                        <input type="text" class="form-control" id="search-plaintiff" aria-label="Search" name="pLName">
                        <small class="form-text text-muted">Last Name</small>
                    </div>
                    <div class="col pt-1">
                        <input class="btn-primary" type="submit" value="Search">
                    </div>
                </div>
            </form>
        </div>
        <br>
        <div class="container-fluid border pt-1">
            <form class="form" action="/search/plaintiff-attorney">
                <label for="search-by-plaintiff-attorney">
                    <h6>Search By Plaintiff Attorney</h6>
                </label>
                <div class="row">
                    <div class="col">
                        <input type="text" class="form-control" id="search-plaintiff-attorney" aria-label="Search"
                            name="pAttyLName">
                        <small class="form-text text-muted">Last Name</small>
                    </div>
                    <div class="col pt-1">
                        <input class="btn-primary" type="submit" value="Search">
                    </div>
                </div>
            </form>
        </div>
        <br>
        <div class="container-fluid border pt-1">
            <form class="form" action="/search/defendant">
                <label for="search-by-defendant">
                    <h6>Search By Defendant</h6>
                </label>
                <div class="row">
                    <div class="col">
                        <input type="text" class="form-control" id="search-defendant" aria-label="Search" name="dLName">
                        <small class="form-text text-muted">Last Name</small>
                    </div>
                    <div class="col pt-1">
                        <input class="btn-primary" type="submit" value="Search">
                    </div>
                </div>
            </form>
        </div>
        <br>
        <div class="container-fluid border pt-1">
            <form class="form" action="/search/defense-attorney">
                <label for="search-by-defense-attorney">
                    <h6>Search By Defense Attorney</h6>
                </label>
                <div class="row">
                    <div class="col">
                        <input type="text" class="form-control" id="search-defense-attorney" aria-label="Search"
                            name="dAttyLName">
                        <small class="form-text text-muted">Last Name</small>
                    </div>
                    <div class="col pt-1">
                        <input class="btn-primary" type="submit" value="Search">
                    </div>
                </div>
            </form>
        </div>
        <br>
        <div class="container-fluid border pt-1 pb-3">
            <form class="form" action="/search/division">
                <label for="filter-by-division">
                    <h6>Filter By Division</h6>
                </label>
                <select multiple class="form-control" id="filter-by-division" name="division">
                    {{#each divisions}}
                    <option>{{division}}</option>
                    {{/each}}
                </select>
            </form>
        </div>
    </section>

    <section id="dashboard-results-table">

        <div class="container-fluid pt-5">
            <h2>Cases</h2>
            <div class="table-responsive">
                <table class="table table-striped table-sm">
                    <thead>
                        <tr>
                            <th scope="col">Case Number</th>
                            <th scope="col">Caption</th>
                            <th scope="col">Amount in Controversy</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    {{#each cases}}
                    <tbody>
                        <tr id="caseRow">
                            <th scope="row" id="case-number">{{caseNumber}}</th>
                            <td id="caption">{{caption}}</td>
                            <td id="amount-in-controversy">{{amntCntrvsy}}</td>
                            <td class="ml-5" id="update-field" data-id="{{id}}">
                                <button type="button" class="btn btn-primary btn-sm" id="update-btn" data-toggle="modal"
                                    data-target="#update-modal">
                                    Update Case</button>
                            </td>
                        </tr>
                    </tbody>
                    {{/each}}
                </table>
            </div>
        </div>

        <div class="modal fade" id="update-modal" tabindex="-1" role="dialog" aria-labelledby="update-case-information"
            aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="update-case-information">Case Information</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form>
                            <div class="form-group">
                                <label for="update-case-number" class="col-form-label">Case Number</label>
                                <input type="text" class="form-control" id="update-case-number">
                            </div>
                            <div class="form-group">
                                <label for="update-caption" class="col-form-label">Caption</label>
                                <input type="text" class="form-control" id="update-caption">
                            </div>
                            <div class="form-group">
                                <label for="update-plaintiff-name" class="col-form-label">Plaintiff Name</label>
                                <div class="row">
                                    <div class="col">
                                        <input type="text" class="form-control" id="update-plaintiff-fName">
                                        <small class="form-text text-muted">First Name</small>
                                    </div>
                                    <div class="col">
                                        <input type="text" class="form-control" id="update-plaintiff-lName">
                                        <small class="form-text text-muted">Last Name</small>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="update-pAttorney-name" class="col-form-label">Plaintiff Attorney
                                    Name</label>
                                <div class="row">
                                    <div class="col">
                                        <input type="text" class="form-control" id="update-pAttorney-fName">
                                        <small class="form-text text-muted">First Name</small>
                                    </div>
                                    <div class="col">
                                        <input type="text" class="form-control" id="update-pAttorney-lName">
                                        <small class="form-text text-muted">Last Name</small>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="update-defendant-name" class="col-form-label">Defendant Name</label>
                                <div class="row">
                                    <div class="col">
                                        <input type="text" class="form-control" id="update-defendant-fName">
                                        <small class="form-text text-muted">First Name</small>
                                    </div>
                                    <div class="col">
                                        <input type="text" class="form-control" id="update-defendant-lName">
                                        <small class="form-text text-muted">Last Name</small>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="update-dAttorney-name" class="col-form-label">Defendant Attorney
                                    Name</label>
                                <div class="row">
                                    <div class="col">
                                        <input type="text" class="form-control" id="update-dAttorney-fName">
                                        <small class="form-text text-muted">First Name</small>
                                    </div>
                                    <div class="col">
                                        <input type="text" class="form-control" id="update-dAttorney-lName">
                                        <small class="form-text text-muted">Last Name</small>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="update-amount-in-controversy" class="col-form-label">Amount in
                                    Controversy</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">$</span>
                                    </div>
                                    <input type="text" class="form-control" id="update-amount-in-controversy">
                                    <div class="input-group-append">
                                        <span class="input-group-text">.00</span>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary">Update</button>
                    </div>
                </div>
            </div>
        </div>

    </section>

</main>